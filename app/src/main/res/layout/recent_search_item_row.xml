<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutAirports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewFromStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_arrow_right" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewToStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPasengetCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutAirports"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="1 Adult"
            android:textColor="@color/colorGray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTravelDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPasengetCount"
            android:drawableStart="@drawable/ic_calender"
            android:drawableLeft="@drawable/ic_calender"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="25 May 20" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>